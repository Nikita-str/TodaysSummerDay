<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.TodaysSummerDay.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:theme="@style/Theme.TodaysSummerDay.AppWidgetContainer">

    <TextView
        android:id="@+id/cur_date"
        style="@style/Widget.TodaysSummerDay.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:text="@string/cur_date"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/day_of_summer"
        style="@style/Widget.TodaysSummerDay.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:layout_marginStart="20dp"
        android:text="@string/summer_day"
        android:textSize="24sp"
        android:textColor="@color/slightly_gray"
        android:textStyle="bold" />
</LinearLayout>
